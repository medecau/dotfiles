AddKeysToAgent yes
ForwardAgent no
ControlMaster auto
ControlPath ~/.ssh/connections/main-%r@%h:%p
ServerAliveInterval 6
ServerAliveCountMax 5

Host *
	IdentityAgent "~/.ssh/agent.sock"

Host github-enterprise
	Hostname github.com
	IdentityFile "~/.ssh/work.pub"

Host github-personal
	Hostname github.com
	IdentityFile "~/.ssh/personal.pub"

Host air mini20 mini14
	User pedro

Host pro airpro
	User prodrigue
