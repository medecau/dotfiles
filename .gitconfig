[user]
name = Pedro Rodrigues
email = medecau@gmail.com

[init]
defaultBranch = main

[core]
pager = cat
compression = 9
looseCompression = 1

[fetch]
prune = true
pruneTags = true

[pull]
rebase = true

[push]
default = upstream

[rebase]
autoStash = true

[status]
branch = true
short = true
showUntrackedFiles = no
showStash = no

[filter "lfs"]
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process
required = true

[alias]
alias = config --global --get-regexp "^alias"

# shortcuts
au = add --update # add only already tracked files
af = add --force  # add otherwise ignored files
br = branch
cm = commit
cmm = commit --message
cma = commit --amend --no-edit
co = checkout
st = status

# utils
news = "!f() { \
[[ ! -z $1 ]] && \
git log --reverse --oneline --no-decorate --no-merges --since $1 || \
git log --reverse --oneline --no-decorate --no-merges --since \
\"$(git log -n 1 --author=\"$(git whoami)\" --no-merges --format=%cd)\"; \
}; f"

# fetch branches and tags from all remotes then prune remote tracking branches and tags
update = fetch --all --tags --prune --prune-tags
whoami = config --get user.email
