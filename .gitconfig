[filter "lfs"]
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process
required = true

[user]
name = Pedro Rodrigues
email = medecau@gmail.com

[init]
defaultBranch = main

[alias]
alias = config --global --get-regexp "^alias"
au = add -u
af = add -f

br = branch

cm = commit
cmm = commit -m
cma = commit --amend

co = checkout
new = checkout -b

st = status -sb

spull = "!git stash && git pull --rebase && git stash pop"

update = fetch --all --tags --prune
