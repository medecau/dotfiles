[user]
name = Pedro Rodrigues
email = medecau@gmail.com

[init]
defaultBranch = main

[core]
pager = cat
compression = 9
looseCompression = 1

[pull]
rebase = true

[rebase]
autoStash = true

[status]
branch = true
short = true
showUntrackedFiles = no
showStash = no

[filter "lfs"]
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process
required = true

[alias]
alias = config --global --get-regexp "^alias"

# shortcuts
au = add --update # add only already tracked files
af = add --force  # add otherwise ignored files
br = branch
cm = commit
cmm = commit --message
cma = commit --amend --no-edit
co = checkout
new = checkout -b

# utils
news = "!f() { \
[[ ! -z $1 ]] && \
git --no-pager log --reverse --oneline --no-decorate --no-merges --since $1 || \
git --no-pager log --reverse --oneline --no-decorate --no-merges --since \
\"$(git --no-pager log -n 1 --author=\"$(git config --get user.name)\" --no-merges --format=%cd)\"; \
}; f"

update = fetch --all --tags --prune
# fetch branches and tags from all remotes then prune remote tracking branches and tags
